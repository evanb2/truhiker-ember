{{page-title "Gear Items"}}

<h1 class="mb-4">Gear Items</h1>

<ul class="bg-white grid grid-cols-3 gap-4 mb-4">
  {{#each @model as |gearItem|}}
    <li class="border-2 p-4 rounded">
      <LinkTo @route="gear-items.show" @model={{gearItem.id}}>
        {{gearItem.name}}
      </LinkTo>
    </li>
  {{/each}}
</ul>

<button
  {{on "click" this.createGearItem}}
  class="shadow-md bg-green-400 text-white p-2 rounded hover:shadow-lg hover:bg-green-500"
  type="button"
>
  + New Gear Item
</button>
