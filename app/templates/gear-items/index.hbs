{{page-title "Gear Items"}}

<h1>Gear Items</h1>

<ul>
  {{#each @model as |gearItem|}}
    <li>
      <LinkTo @route="gear-items.show" @model={{gearItem.id}}>
        {{gearItem.name}}
      </LinkTo>
    </li>
  {{/each}}

  <li>
    <button
      {{on "click" this.createGearItem}}
      class="shadow-md bg-green-400 text-white p-4 rounded hover:shadow-lg hover:bg-green-500"
      type="button"
    >
      + New Gear Item
    </button>
  </li>
</ul>
