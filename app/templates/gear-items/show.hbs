{{page-title "Gear Item Show"}}

<div class="card max-w-md mx-auto p-8">
  <h1 class="mb-4">{{@model.name}}</h1>

  <form class="flex flex-col">
    <div class="flex flex-col flex-auto mb-4">
      <label class="mb-2">
        Name
      </label>
      <XInput value={{@model.name}} @onChange={{queue (set @model "name") this.save}} class="rounded p-2 border" />
    </div>
    <div class="flex flex-col flex-auto mb-4">
      <label class="mb-2">
        Description
      </label>
      <XInput value={{@model.description}} @onChange={{queue (set @model "description") this.save}} class="rounded p-2 border" />
    </div>
    <div class="flex">
      <div class="flex flex-col flex-auto mb-4 mr-4">
        <label class="mb-2">
          Weight
        </label>
        <XInput value={{@model.weight}} @onChange={{queue (set @model "weight") this.save}} class="rounded p-2 border" />
      </div>
      <div class="flex flex-col flex-none mb-4 w-20">
        <label class="mb-2">
          Units
        </label>
        <XSelect
          class="border-2 rounded p-2"
          @value={{@model.units}}
          @onChange={{queue (set @model "units") this.save}}
          as |xs|
        >
          <xs.option @value="oz">oz</xs.option>
          <xs.option @value="lb">lb</xs.option>
        </XSelect>
      </div>
    </div>
  </form>
</div>
