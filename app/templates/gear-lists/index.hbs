{{page-title "Gear Lists"}}

<h1 class="mb-4">Gear Lists</h1>

<ul class="grid grid-cols-3 gap-4 mb-4">
  {{#each @model as |gearList|}}
    <li class="border-2 p-4 rounded">
      <LinkTo @route="gear-lists.show" @model={{gearList.id}}>
        {{gearList.name}}
      </LinkTo>
    </li>
  {{/each}}
</ul>

<button
  {{on "click" this.createGearList}}
  class="shadow-md bg-green-400 text-white p-2 rounded hover:shadow-lg hover:bg-green-500"
  type="button"
>
  + New Gear List
</button>
