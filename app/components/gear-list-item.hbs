<div class="flex">
  <div class="p-1">
    <div class="flex flex-col flex-auto">
      <label class="mb-2">
        Item
      </label>
      <XSelect
        class="border-2 rounded p-2"
        @value={{@gearListItem.gearItem}}
        @onChange={{queue (set @gearListItem "gearItem") @onSave}}
        as |xs|
      >
        <xs.option disabled>Select a Gear Item...</xs.option>
        {{#each @gearItems as |gearItem|}}
          <xs.option @value={{gearItem}}>{{gearItem.name}}</xs.option>
        {{/each}}
      </XSelect>
    </div>
  </div>
  <div class="flex-1 p-1">
    <div class="flex flex-col flex-auto">
      <label class="mb-2">
        Description
      </label>
      <p class="p-2">
        {{@gearListItem.gearItem.description}}
      </p>
    </div>
  </div>
  <div class="flex-none w-28 p-1">
    <div class="flex flex-col flex-auto">
      <label class="mb-2">
        Weight
      </label>
      <XInput
        value={{@gearListItem.gearItem.weight}}
        {{!-- @onChange={{queue (set @gearListItem.gearItem "weight") @onSave}} --}}
        class="rounded p-2 border"
        disabled
      />
    </div>
  </div>
  <div class="flex-none w-20 p-1">
    <div class="flex flex-col flex-auto">
      <label class="mb-2">
        Qty
      </label>
      <XInput
        @value={{@gearListItem.quantity}}
        @onChange={{queue (set @gearListItem "quantity") @onSave}}
        class="rounded p-2 border"
      />
    </div>
  </div>
</div>
